## SECTION=scripting_languages

menuconfig PERL
	tristate
	prompt "perl                          "
	select HOST_PERL
	help
	  perl - Practical Extraction and Report Language

if PERL

config PERL_MODULES
	string
	prompt "modules"
	default "constant Getopt/Std Time/Local"
	help
	  List of space-separated perl modules (without .pm) to copy to the
	  rootfs.

	  Examples: constant Getopt/Std Time/Local

	  Module dependencies on external libraries are not automatic so
	  check your needs.

	  Leave empty for all modules (as far as the external libraries
	  are available).

menu "external perl modules         "
source "generated/perl_module.in"
endmenu

endif

